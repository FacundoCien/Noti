<style>
  @import url('https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&family=Protest+Revolution&family=Rowdies:wght@300;400;700&family=Special+Elite&display=swap');

  /* Fuente para el título con borde alrededor de las letras */
  .titulo-vestimenta {
    font-family: 'Kalam', cursive;
    color: white; /* Color del texto (letras blancas) */
    text-shadow: 
      0 0 5px #1900FF,  /* Sombra difusa azul */
      0 0 10px #1900FF, /* Sombra más difusa azul */
      0 0 15px #1900FF, /* Sombra aún más difusa azul */
      0 0 20px #1900FF, /* Sombra aún más difusa azul */
      0 0 25px #1900FF, /* Sombra más difusa azul */
      0 0 30px #1900FF; /* Sombra más grande azul */
    padding: 8px 16px; /* Espacio alrededor del texto */
    border-radius: 8px; /* Bordes redondeados */
  }

  /* Fuente para el párrafo */
  .parrafo-vestimenta {
    font-family: sans-serif;
    color: white; /* Color blanco para el texto */
  }

  /* Estilos para el modal */
  .modal {
    display: none; /* Inicialmente oculto */
    position: fixed;
    z-index: 1000; /* Asegura que el modal esté por encima de otros elementos */
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8); /* Fondo semitransparente */
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .modal-content {
    position: relative;
    max-width: 90%;
    max-height: 80%;
  }

  .modal-content img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  /* Estilo para el botón de cierre */
  .close {
    position: absolute;
    top: 10px;
    right: 10px;
    color: white;
    font-size: 30px;
    cursor: pointer;
  }

</style>

<section class="flex flex-wrap md:flex-nowrap justify-between p-8 space-x-0 md:space-x-8 relative bg-cover bg-center mb-10" 
    style="background-image: url('/fondo4.png'); background-size: cover; background-position: center;">
  <div class="absolute inset-0 bg-black bg-opacity-50 backdrop-blur-lg"></div>
  
  <!-- Contenido de texto -->
  <div class="p-6 w-full md:w-1/2 z-10">
    <div class="p-4 text-center text-[#1900FF]">
      <h2 class="text-4xl md:text-5xl font-bold titulo-vestimenta">Vestimenta ITF</h2>
    </div>
    <div class="p-4 text-center text-white mt-4">
      <p class="text-lg parrafo-vestimenta">
        En el <span class="text-blue-500">Taekwon-Do</span>, los materiales utilizados para los 
        <span class="text-blue-500">uniformes</span> y accesorios juegan un papel fundamental en la práctica del arte marcial. 
        Los <span class="text-blue-500">doboks</span> y otros elementos están hechos de telas resistentes y duraderas, diseñadas para 
        soportar los rigores del entrenamiento intensivo. Además, los materiales deben ofrecer comodidad y flexibilidad para 
        permitir movimientos ágiles y precisos durante las prácticas y competiciones.
      </p>
    </div>
  </div>
  
  <!-- Imagen clickeable -->
  <div class="w-full md:w-1/2 z-10 mt-6 md:mt-0 p-10">
    <!-- Imagen en la página, que abrirá el modal al hacer clic -->
    <img id="myImg" src="/ropa.png" alt="Dobok ITF" class="w-full h-full object-cover rounded-md cursor-pointer">
  </div>
</section>

<!-- Modal -->
<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close" id="closeModal">&times;</span>
    <img id="modalImg" src="" alt="Imagen ampliada">
  </div>
</div>

<script>
  // Obtener el modal
  var modal = document.getElementById("myModal");
  
  // Obtener la imagen
  var img = document.getElementById("myImg");
  
  // Obtener el elemento de la imagen en el modal
  var modalImg = document.getElementById("modalImg");
  
  // Obtener el botón de cierre
  var closeModal = document.getElementById("closeModal");
  
  // Cuando el usuario hace clic en la imagen, se abre el modal
  img.onclick = function() {
    modal.style.display = "flex";
    modalImg.src = this.src; // La imagen que se muestra en el modal es la misma que se clickeó
  }
  
  // Cuando el usuario hace clic en el botón de cierre, se cierra el modal
  closeModal.onclick = function() {
    modal.style.display = "none";
  }
  
  // Cuando el usuario hace clic fuera del modal, también se cierra
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
</script>
